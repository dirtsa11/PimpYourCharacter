@model PimpYourCharacter.Models.vpied

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Êtes-vous sûr de vouloir supprimer cet élément ?</h3>
<div>
    <h4>Vêtement pied</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.label,"Label")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.label)
        </dd>

        <dt>
            @Html.LabelFor(model => model.poids,"Poids")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.poids)
        </dd>

        <dt>
            @Html.LabelFor(model => model.couleur.label,"Couleur")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.couleur.label)
        </dd>

        <dt>
            @Html.LabelFor(model => model.texture.label,"Texture")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.texture.label)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la liste", "Index")
        </div>
    }
</div>
