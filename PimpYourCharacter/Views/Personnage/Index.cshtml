@model IEnumerable<PimpYourCharacter.Models.personnage>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des personnages</h2>

<p>
    @Html.ActionLink("Nouveau", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nom
        </th>
        <th>
            Age
        </th>
        <th>
            Id corps
        </th>
        <th>
            Ethnie
        </th>
        <th>
            Genre
        </th>
        <th>
           Vêtement bas
        </th>
        <th>
            Vêtement haut
        </th>
        <th>
            Accessoire
        </th>
        <th>
            Arme
        </th>
        <th>
            Bouclier
        </th>
        <th>
            Vêtement main
        </th>
        <th>
           Vêtement pied
        </th>
        <th>
            Vêtement tête
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.corps.id_corps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ethnie.label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genre.label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vbas.label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vhaut.label)
            </td>
            <td>
                @Html.ListBox("id_accessoire", new SelectList(item.accessoire, "id_accessoire", "label"))
            </td>
            <td>
                @Html.ListBox("id_arme", new SelectList(item.arme, "id_arme", "label"))
            </td>
            <td>
                @Html.ListBox("id_bouclier", new SelectList(item.bouclier, "id_bouclier", "label"))
            </td>
            <td>
                @Html.ListBox("id_vmain", new SelectList(item.vmain, "id_vmain", "label"))
            </td>
            <td>
                @Html.ListBox("id_vpied", new SelectList(item.vpied, "id_vpied", "label"))
            </td>
            <td>
                @Html.ListBox("id_vtete", new SelectList(item.vtete, "id_vtete", "label"))
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.id_personnage }) |
                @Html.ActionLink("Détails", "Details", new { id = item.id_personnage }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.id_personnage })
            </td>
        </tr>
    }

</table>
