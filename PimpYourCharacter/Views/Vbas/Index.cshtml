@model IEnumerable<PimpYourCharacter.Models.vbas>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des vêtements bas</h2>

<p>
    @Html.ActionLink("Nouveau", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Label
        </th>
        <th>
           Poids
        </th>
        <th>
           Couleur
        </th>
        <th>
           Texture
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.poids)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.couleur.label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.texture.label)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.id_vbas }) |
            @Html.ActionLink("Détails", "Details", new { id=item.id_vbas }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id_vbas })
        </td>
    </tr>
}

</table>
