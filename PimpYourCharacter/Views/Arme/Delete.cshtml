@model PimpYourCharacter.Models.arme

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Êtes-vous sûr de vouloir supprimer cet élément ?</h3>
<div>
    <h4>Arme</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.label, "Label")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.label)
        </dd>

        <dt>
            @Html.LabelFor(model => model.poids,"Poids")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.poids)
        </dd>

        <dt>
            @Html.LabelFor(model => model.categorie_arme.categorie_arme1, "Catégorie")
